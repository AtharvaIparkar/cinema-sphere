{
  "name": "cinemasphere",
  "version": "1.0.0",
  "description": "A MERN Stack Movie Streaming Platform",
  "main": "server.js",
  "scripts": {
    "start": "cd server && node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && nodemon server.js",
    "client": "cd client-vite && npm run dev",
    "build": "cd client-vite && npm run build",
    "seed": "cd server && node seedData.js",
    "vercel-build": "cd client-vite && npm install && npm run build"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.59.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.22.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
